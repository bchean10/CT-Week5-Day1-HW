{% extends 'base.html'%}
    {% block title %}
        Pokemon API Lookup
    {% endblock %}
{% block content %}

<h1>Pokemon</h1>
<form action="{{url_for('main.pokemons')}}" method = "POST">
    {{ form.hidden_tag() }}
    {{ form.pokemon_name.label(class="form-label") }}
    {{ form.pokemon_name(class="form-control") }}

    {{ form.submit(class="btn btn-primary") }}
</form>
    {% if error %}
        <small style="color:red">{{error}}</small>
    {% endif %}
    {% if pokemon %}
        <img src="{{pokemon['sprites']}}" style = "height: 250px";>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Pokemon Name</th>
                    <th scope="col">Abilities</th>
                    <th scope="col">Base Experience</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">{{pokemon['pokemon_name']}}</th>
                    <td>{{pokemon['abilities']}}</td>
                    <td>{{pokemon['base_experience']}}</td>
                    
                </tr>
            </tbody>
        </table>
    {% endif %}
{% endblock %}