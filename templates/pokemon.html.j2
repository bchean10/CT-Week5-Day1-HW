{% extends 'base.html'%}
{% block content %}

<h1>Pokemon</h1>
<form action="/pokemons" method = "POST">
  <div class="mb-3">
    <label for="pokemon_name" class="form-label">Pokemon Name</label>
    <input type="text" name="pokemon_name" class="form-control" id="pokemon_name" >
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
    {% if error %}
        <small style="color:red">{{error}}</small>
    {% endif %}
    {% if pokemon %}
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Pokemon Name</th>
                    <th scope="col">Abilities</th>
                    <th scope="col">Base Experience</th>
                    <th scope="col">Sprites</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">{{pokemon['pokemon_name']}}</th>
                    <td>{{pokemon['abilities']}}</td>
                    <td>{{pokemon['base_experience']}}</td>
                    <td>{{pokemon['sprites']}}</td>
                </tr>
            </tbody>
        </table>
    {% endif %}
{% endblock %}